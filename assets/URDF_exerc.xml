<?xml version="1.0"?>
<robot name="seven_link_arm">
    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.2"/>
            </geometry>
        </visual>
    </link>

    <!-- Link 1 -->
    <link name="link1">
        <visual>
            <geometry>
                <box size="0.5 0.1 0.1"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <!-- Joint 1: Base to Link 1
         MDH: alpha0=0, a0=0, d1=L1, theta1, revolute -->
    <joint name="joint1" type="revolute">
        <parent link="base_link"/>
        <child link="link1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="100" velocity="1"/>
        <mdh a="0" alpha="0" d="1" theta_offset="0"/>
    </joint>

    <!-- Link 2 -->
    <link name="link2">
        <visual>
            <geometry>
                <box size="0.5 0.1 0.1"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <!-- Joint 2: Link 1 to Link 2
         MDH: alpha1=-90deg, a1=0, d2=0, revolute -->
    <joint name="joint2" type="revolute">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="100" velocity="1"/>
        <mdh a="0" alpha="-1.5708" d="0" theta_offset="0"/>
    </joint>

    <!-- Link 3 -->
    <link name="link3">
        <visual>
            <geometry>
                <box size="0.5 0.1 0.1"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <!-- Joint 3: Link 2 to Link 3
         MDH: alpha2=90deg, a2=0, d3=L2, revolute -->
    <joint name="joint3" type="revolute">
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="100" velocity="1"/>
        <mdh a="0" alpha="1.5708" d="1" theta_offset="0"/>
    </joint>

    <!-- Link 4 -->
    <link name="link4">
        <visual>
            <geometry>
                <box size="0.5 0.1 0.1"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <!-- Joint 4: Link 3 to Link 4
         MDH: alpha3=90deg, a3=L4, d4=0, revolute -->
    <joint name="joint4" type="revolute">
        <parent link="link3"/>
        <child link="link4"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.395" upper="1.57" effort="100" velocity="1"/>
        <mdh a="1" alpha="1.5708" d="0" theta_offset="0"/>
    </joint>

    <!-- Link 5 -->
    <link name="link5">
        <visual>
            <geometry>
                <box size="0.5 0.1 0.1"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <!-- Joint 5: Link 4 to Link 5
         MDH: alpha4=-90deg, a4=-L4, d5=L3, revolute -->
    <joint name="joint5" type="revolute">
        <parent link="link4"/>
        <child link="link5"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.57" upper="1.57" effort="100" velocity="1"/>
        <mdh a="-1" alpha="-1.5708" d="1" theta_offset="0"/>
    </joint>

    <!-- Link 6 -->
    <link name="link6">
        <visual>
            <geometry>
                <box size="0.5 0.1 0.1"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <!-- Joint 6: Link 5 to Link 6
         MDH: alpha5=90deg, a5=0, d6=0, revolute -->
    <joint name="joint6" type="revolute">
        <parent link="link5"/>
        <child link="link6"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="3.14" effort="100" velocity="1"/>
        <mdh a="0" alpha="1.5708" d="0" theta_offset="0"/>
    </joint>

    <!-- Link 7 -->
    <link name="link7">
        <visual>
            <geometry>
                <box size="0.5 0.1 0.1"/>
            </geometry>
            <origin xyz="0.25 0 0" rpy="0 0 0"/>
        </visual>
    </link>

    <!-- Joint 7: Link 6 to Link 7
         MDH: alpha6=90deg, a6=L5, d7=0, revolute -->
    <joint name="joint7" type="revolute">
        <parent link="link6"/>
        <child link="link7"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="100" velocity="1"/>
        <mdh a="1" alpha="1.5708" d="0" theta_offset="0"/>
    </joint>

</robot>
